<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewModelDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Customize the ActionBar style -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

    </style>

    <!-- Custom ActionBar style -->
    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Solid">
        <!-- Center the title -->
        <item name="android:gravity">center_horizontal</item>
        <!-- Apply custom title text style -->
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- Custom title text style -->
    <style name="MyActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/racing_sans_one</item>
    </style>
</resources>
